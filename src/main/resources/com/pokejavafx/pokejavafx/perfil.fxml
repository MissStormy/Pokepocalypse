            <Accordion layoutX="7.0" layoutY="8.0">
              <panes>
                <TitledPane animated="false" prefHeight="110.0" prefWidth="202.0" text="Cambiar nombre">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="101.0" prefWidth="200.0" styleClass="background">
                           <children>
                              <TextField fx:id="TxtCambiarNombre" layoutX="20.0" layoutY="14.0" />
