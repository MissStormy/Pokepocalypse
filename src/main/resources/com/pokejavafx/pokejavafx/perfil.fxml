      <Button fx:id="BtnCerrarSesion" layoutX="479.0" layoutY="248.0" mnemonicParsing="false" onAction="#OnClickCerrarSesion" styleClass="button-perfil" text="Cerrar sesión" underline="true" />
      <ImageView fitHeight="43.0" fitWidth="131.0" layoutX="-6.0" layoutY="12.0" pickOnBounds="true">
         <image>
            <Image url="@../../../img/glitchX.png" />
         </image>
      </ImageView>
      <Button fx:id="BtnGoBack" layoutX="22.0" layoutY="19.0" mnemonicParsing="false" onAction="#OnClickGoBack" styleClass="button-perfil" text="Go back" />
