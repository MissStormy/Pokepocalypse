                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="96.0" prefWidth="200.0" styleClass="background">
                           <children>
                              <Button fx:id="BtnBorrarDatos" layoutX="66.0" layoutY="59.0" mnemonicParsing="false" onAction="#OnClickBorrarTodo" styleClass="login-buttons" text="Borrar" />
                              <Label layoutX="9.0" layoutY="7.0" prefHeight="43.0" prefWidth="177.0" styleClass="pokedex-little-label" text="¿Seguro que quieres borrarlo todo?" textAlignment="CENTER" wrapText="true" />
                           </children>
                        </AnchorPane>
                  </content>
                </TitledPane>
              </panes>
            </Accordion>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
