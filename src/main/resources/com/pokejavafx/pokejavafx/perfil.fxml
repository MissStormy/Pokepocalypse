<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../../CSS/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pokejavafx.pokejavafx.PerfilCtrl">
   <children>
      <ImageView fitHeight="400.0" fitWidth="695.0" layoutX="-95.0" pickOnBounds="true">
         <image>
            <Image url="@../../../img/perfilBG.jpg" />
         </image>
      </ImageView>
      <ImageView fx:id="ImgPerfil" fitHeight="390.0" fitWidth="282.0" layoutX="210.0" layoutY="6.0" pickOnBounds="true">
         <image>
            <Image url="@../../../img/laraPerfil.png" />
         </image>
         <effect>
            <DropShadow />
         </effect>
      </ImageView>
      <Label fx:id="LblPerfil" layoutX="34.0" layoutY="77.0" prefHeight="61.0" prefWidth="170.0" styleClass="label-perfil" text="Stormy" textFill="WHITE">
         <font>
            <Font size="50.0" />
         </font>
      </Label>
      <Button fx:id="BtnAbout" layoutX="502.0" layoutY="138.0" mnemonicParsing="false" onAction="#OnClickAbout" styleClass="button-perfil" text="Sobre mi" underline="true" />
      <Button fx:id="BtnHunts" layoutX="452.0" layoutY="173.0" mnemonicParsing="false" onAction="#OnClickHunts" prefHeight="28.0" prefWidth="131.0" styleClass="button-perfil" text="Ultimas capturas" underline="true" />
