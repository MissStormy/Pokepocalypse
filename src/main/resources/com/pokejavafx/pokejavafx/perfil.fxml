      <TableView fx:id="TbwCapturas" layoutX="29.0" layoutY="145.0" prefHeight="225.0" prefWidth="200.0" visible="false">
        <columns>
          <TableColumn fx:id="Tbc1" prefWidth="99.0" text="Nombre" />
          <TableColumn fx:id="Tbc2" prefWidth="100.0" text="Tipo" />
        </columns>
      </TableView>
      <AnchorPane fx:id="APPerfil" layoutX="19.0" layoutY="137.0" prefHeight="249.0" prefWidth="216.0" styleClass="tab-background" visible="false">
